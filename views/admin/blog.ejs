<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3">
    <h1 class="h2">Blogs</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <a href="/admin/addBlog"><button class="btn btn-sm btn-outline-secondary">ADD+</button></a>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>No.</th>
                <th>Project</th>
                <th>Github Link</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((ele, index)=>{ %>
            <tr>
                <td><%= index +1 %></td>
                <td><a href="blog/<%= ele.slug%>"><%= ele.name %></a></td>
                <td><a href="<%= ele.githubUrl %>">Github</a></td>
                <td><img src="<%= ele.image %>" width="80px" height="80px"></td>
            </tr>
            <% }) %>

        </tbody>
    </table>
</div>